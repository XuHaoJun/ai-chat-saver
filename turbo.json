{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build:chrome": {
      "dependsOn": ["^build"],
      "outputs": ["dist/chrome/**"]
    },
    "build:firefox": {
      "dependsOn": ["^build"],
      "outputs": ["dist/firefox/**"]
    },
    "prod": {
      "dependsOn": ["build:chrome", "build:firefox"],
      "outputs": ["dist/*.zip"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:firefox": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:unit": {
      "dependsOn": ["^build"]
    },
    "test:integration": {
      "dependsOn": ["build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}

